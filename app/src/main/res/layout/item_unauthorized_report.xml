<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="unauthorized"
            type="com.teraglobal.security_alert.fragment.unauthorized.model.UnauthorizedContent" />

        <variable
            name="clickListener"
            type="com.teraglobal.security_alert.fragment.unauthorized.UnauthorizedAdapterClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:onClick="@{() -> clickListener.onItemClick(unauthorized)}"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:elevation="12dp"
            app:cardCornerRadius="36dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            app:cardPreventCornerOverlap="false"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:base64Image="@{unauthorized.image}"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:text="@{unauthorized.watchlistMemberName}"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:text="@string/location"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="@{unauthorized.location}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:text="@string/time_appeared"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="@{unauthorized.timeAppeared}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:text="@string/time_dissapeared"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:text="@{unauthorized.timeDisappeared}"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>
</layout>